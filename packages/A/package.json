{
    "name": "workspace-a",
    "version": "1.0.0",
    "description": "Has older jest",
    "dependencies": {
        "@types/jest": "^26.0.14",
        "jest": "^26.6.3",
        "ts-jest": "^26.5.4",
        "typescript": "^4.9.5"
    },
    "scripts": {
        "test": "jest"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "useESM": false
            }
        },
        "moduleFileExtensions": [
            "js",
            "json",
            "ts",
            "tsx"
        ],
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        },
        "transform": {
            "\\.(ts|tsx)$": "ts-jest"
        },
        "testRegex": ".*\\.(spec|test)\\.ts$",
        "testEnvironment": "node"
    }
}
